    <tr class="<%= 'odd-row' if odd %>">
      <td class="left-aligned"><a href="<%= "#{root}q/#{name}" %>"><%= name %></a></td>
<% begin
    qc = get_queueclient(name)
    raise unless qc.running?
    status = qc.status
-%>
<%  if status != 'DOWN' -%>
      <td>
        <pre><%= msgs_labels.zip(qc.num_messages.values_at(*msgs_labels)).map {
          |ab|
          sp_beg = '<span class="none">'
          sp_end = '</span>'
          if ab[1] > 0
            cls = 'yellow'
            if ab[0] == 'err'
              cls = 'red'
            elsif ['done', 'relayed'].include? ab[0]
              cls = 'green'
            end
            sp_beg = "<span class=\"#{cls}\">"
            sp_end = '</span>'
          end
          "#{sp_beg}#{ab[0]}:#{ab[1].to_s.ljust(4)}#{sp_end}"
        }.join
        -%></pre>
      </td>
<%  else -%>
      <td>-</td>
<%  end -%>
      <td><%= qc.ping %></td>
      <td><%= qc.read_pid %></td>
      <td><%= qc.uptime %></td>
      <td>
        <span class="<%= status == 'UP' ? 'green' : 'red' %>"><%= status %></span>
      </td>
<% rescue -%>
      <td>-</td>
      <td>-</td>
      <td>-</td>
      <td>-</td>
      <td><span class="red">DOWN <%= $! %></span></td>
<% end -%>
      <td>
<%=     erb :_main_queue_form, :locals => {:status => status, :name => name } %>
      </td>
    </tr>
